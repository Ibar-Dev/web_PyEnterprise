# ====================================================
# CONFIGURACIÓN DE SUPABASE (REQUERIDO)
# ====================================================

# URL del proyecto Supabase
SUPABASE_URL=https://tu-proyecto.supabase.co

# API Key pública (anon/public)
SUPABASE_KEY=tu-clave-publica-supabase-aqui

# Contraseña de la base de datos PostgreSQL
DATABASE_PASSWORD=tu-password-seguro-aqui

# Connection String completa (para SQLAlchemy)
DATABASE_URL=postgresql://postgres:TU_PASSWORD@db.tu-proyecto.supabase.co:5432/postgres

# ====================================================
# CONFIGURACIÓN DE LA APLICACIÓN (REQUERIDO)
# ====================================================

# Entorno (development o production)
ENVIRONMENT=development

# Secret key para sesiones (GENERAR UNA ÚNICA Y SEGURA)
# Puedes generarla con: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GENERAR-CLAVE-SECRETA-UNICA-AQUI

# ====================================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ====================================================

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-password-de-app
NOTIFICATION_EMAIL=contacto@pylink.com

# ====================================================
# OTRAS CONFIGURACIONES (OPCIONAL)
# ====================================================

APP_NAME=PyLink
DEBUG=True
DOMAIN=localhost:3000
